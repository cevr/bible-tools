{
  "name": "bible-tools",
  "version": "1.0.0",
  "private": true,
  "description": "bible tools",
  "license": "MIT",
  "author": "cristian ramos <seeve.c@gmail.com>",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "test": "turbo run test",
    "gate": "turbo run typecheck test && bun run lint && bun run fmt",
    "clean": "rm -rf .turbo */.turbo */*/.turbo",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@effect/language-service": "^0.72.0",
    "lefthook": "^2.0.15",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "turbo": "^2.7.6",
    "typescript": "^5.9.3"
  },
  "packageManager": "bun@1.3.6",
  "catalog": {
    "@effect/cli": "0.73.1",
    "@effect/language-service": "0.72.0",
    "@effect/platform": "0.94.2",
    "@effect/platform-bun": "0.87.1",
    "@types/bun": "1.3.6",
    "ai": "6.0.49",
    "typescript": "5.9.3",
    "effect": "3.19.15"
  }
}
