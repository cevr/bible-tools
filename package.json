{
  "name": "bible-tools",
  "version": "1.0.0",
  "private": true,
  "description": "bible tools",
  "license": "MIT",
  "author": "cristian ramos <seeve.c@gmail.com>",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "test": "turbo run test",
    "gate": "concurrently -n turbo,lint,fmt -c blue,yellow,magenta \"turbo run typecheck test build\" \"bun run lint:fix\" \"bun run fmt\"",
    "clean": "rm -rf .turbo */.turbo */*/.turbo",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@effect/language-service": "^0.72.0",
    "concurrently": "^9.2.1",
    "effect-bun-test": "^0.1.0",
    "lefthook": "^2.0.16",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "turbo": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "packageManager": "bun@1.3.6",
  "catalog": {
    "@effect/cli": "0.73.1",
    "@effect/language-service": "0.72.0",
    "@effect/platform": "0.94.2",
    "@effect/platform-bun": "0.87.1",
    "@types/bun": "1.3.8",
    "ai": "6.0.68",
    "typescript": "5.9.3",
    "effect": "3.19.15"
  },
  "patchedDependencies": {
    "@effect/cli@0.73.1": "patches/@effect%2Fcli@0.73.1.patch"
  }
}
